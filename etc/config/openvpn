
config openvpn 'custom_config'
	option config '/etc/openvpn/my-vpn.conf'

config openvpn 'sample_server'
	option port '1194'
	option proto 'udp'
	option dev 'tun'
	option ca '/etc/openvpn/ca.crt'
	option cert '/etc/openvpn/server.crt'
	option key '/etc/openvpn/server.key'
	option server '10.8.0.0 255.255.255.0'
	option ifconfig_pool_persist '/tmp/ipp.txt'
	option keepalive '10 120'
	option compress 'lzo'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option status '/tmp/openvpn-status.log'
	option verb '3'
	option dh '/etc/openvpn/dh.pem'
	option comp_lzo 'yes'
	option dev_type 'tun'
	option duplicate_cn '1'

config openvpn 'vpnserver_userpass'
	option mode 'server'
	option tls_server '1'
	option port '1194'
	option proto 'udp'
	option dev 'tun'
	option ca '/etc/openvpn/ca.crt'
	option cert '/etc/openvpn/server.crt'
	option key '/etc/openvpn/server.key'
	option dh '/etc/openvpn/dh.pem'
	option script_security '2'
	option auth_user_pass_verify '/etc/openvpn/auth.sh via-file'
	option float '1'
	option username_as_common_name '1'
	option client_cert_not_required '1'
	option verify_client_cert 'none'
	option auth_nocache '1'
	option max_clients '30'
	option mute '20'
	option reneg_sec '0'
	option mute_replay_warnings '1'
	option server '10.8.0.0 255.255.255.0'
	option ifconfig_pool_persist '/tmp/ipp.txt'
	option keepalive '10 120'
	option compress 'lzo'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option status '/tmp/openvpn-status.log'
	option verb '3'
	option comp_lzo 'yes'
	option dev_type 'tun'
	option duplicate_cn '1'
	option topology 'subnet'
	option route_gateway 'dhcp'
	list push 'comp-lzo yes'
	list push 'persist-key'
	list push 'persist-tun'
	list push 'topology subnet'
	list push 'route-gateway dhcp'
	list push 'redirect-gateway def1'
	list push 'route 192.168.100.0 255.255.255.0'
	list push 'dhcp-option DNS 192.168.100.1'
	list push 'dhcp-option DOMAIN lan'

config openvpn 'vpnserver'
	option mode 'server'
	option tls_server '1'
	option port '1194'
	option proto 'udp'
	option dev 'tun'
	option ca '/etc/openvpn/ca.crt'
	option cert '/etc/openvpn/server.crt'
	option key '/etc/openvpn/server.key'
	option dh '/etc/openvpn/dh.pem'
	option server '10.8.0.0 255.255.255.0'
	option ifconfig_pool_persist '/tmp/ipp.txt'
	option keepalive '10 120'
	option compress 'lzo'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option status '/tmp/openvpn-status.log'
	option verb '3'
	option comp_lzo 'yes'
	option dev_type 'tun'
	option duplicate_cn '1'
	option topology 'subnet'
	option route_gateway 'dhcp'
	list push 'comp-lzo yes'
	list push 'persist-key'
	list push 'persist-tun'
	list push 'topology subnet'
	list push 'route-gateway dhcp'
	list push 'redirect-gateway def1'
	list push 'route 192.168.100.0 255.255.255.0'
	list push 'dhcp-option DNS 192.168.100.1'
	list push 'dhcp-option DOMAIN lan'
	option enabled '1'

config openvpn 'sample_client'
	option client '1'
	option dev 'tun'
	option proto 'udp'
	list remote 'my_server_1 1194'
	option resolv_retry 'infinite'
	option nobind '1'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option ca '/etc/openvpn/ca.crt'
	option cert '/etc/openvpn/client.crt'
	option key '/etc/openvpn/client.key'
	option compress 'lzo'
	option verb '3'

